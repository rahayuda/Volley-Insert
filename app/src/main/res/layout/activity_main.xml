<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="@drawable/layout"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inNim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtKet"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:background="@drawable/background_white"
        android:paddingLeft="20dp"
        android:textColor="@color/dream"
        android:textSize="16dp"
        android:inputType="number"
        android:text="Nim" />

    <EditText
        android:id="@+id/inNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:background="@drawable/background_white"
        android:paddingLeft="20dp"
        android:textColor="@color/dream"
        android:textSize="16dp"
        android:inputType="textPersonName"
        android:text="Nama"
        android:layout_below="@id/inNim"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/inAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:background="@drawable/background_white"
        android:paddingLeft="20dp"
        android:textColor="@color/dream"
        android:textSize="16dp"
        android:inputType="textPersonName"
        android:text="Email"
        android:layout_below="@id/inNama"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btInput"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_below="@id/inAlamat"
        android:fontFamily="@font/alata"
        android:background="@drawable/background_radius"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txtKet"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:textColor="@color/dream"
        android:textSize="16dp" />

</LinearLayout>
